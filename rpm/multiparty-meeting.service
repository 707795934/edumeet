[Unit]
Description=edumeet is a audio / video meeting service running in the browser and powered by webRTC
After=network.target

[Service]
EnvironmentFile=-/etc/sysconfig/edumeet
ExecStart=/opt/edumeet/server/server.js
Restart=always
User=mm
Group=mm
WorkingDirectory=/opt/edumeet/server
AmbientCapabilities=CAP_NET_BIND_SERVICE
ProtectSystem=full
ProtectHome=true
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
